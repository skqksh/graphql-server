{
  "name": "graphql-server",
  "version": "1.0.0",
  "description": "",
  "main": "dist/server.js",
  "dependencies": {
    "@prisma/client": "^2.6.2",
    "@types/crypto-js": "^3.1.47",
    "@types/lodash": "^4.14.161",
    "apollo-server-express": "^2.17.0",
    "crypto-js": "^4.0.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "graphql-tools": "^6.2.1",
    "lodash": "^4.17.20"
  },
  "devDependencies": {
    "@prisma/cli": "^2.6.2",
    "@types/jest": "^26.0.13",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "apollo-server-testing": "^2.17.0",
    "eslint": "^7.8.1",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "jest": "^26.4.2",
    "lint-staged": "^10.3.0",
    "nodemon": "^2.0.4",
    "prettier": "^2.1.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.3.0",
    "ts-node": "^9.0.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.0.2"
  },
  "scripts": {
    "start": "npm run build && nodemon -r tsconfig-paths/register dist/server.js",
    "build": "rimraf dist && tsc",
    "dev": "nodemon -r tsconfig-paths/register src/server.ts",
    "test": "jest",
    "test:unit": "jest",
    "test:int": "jest -c='jest.integration.config.js'",
    "lint": "eslint --fix src/*",
    "prisma:update": "npm run prisma:migrate && npm run prisma:check",
    "prisma:migrate": "npx prisma migrate save --experimental && npx prisma migrate up --experimental",
    "prisma:check": "npx prisma introspect && npx prisma generate",
    "prisma:delete-migration": "rimraf prisma/migrations",
    "@comment prisma:delete-migration": "have to run 'TRUNCATE \"_Migration\"' in DB after run that script"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/*": "eslint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/skqksh/graphql-server.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/skqksh/graphql-server/issues"
  },
  "homepage": "https://github.com/skqksh/graphql-server#readme"
}
