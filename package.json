{
  "name": "graphql-server",
  "version": "1.0.0",
  "description": "",
  "main": "dist/server.js",
  "dependencies": {
    "@prisma/client": "^2.6.2",
    "@types/lodash": "^4.14.161",
    "apollo-server-express": "^2.17.0",
    "express": "^4.17.1",
    "graphql-tools": "^6.2.1",
    "lodash": "^4.17.20"
  },
  "devDependencies": {
    "@prisma/cli": "^2.6.2",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "eslint": "^7.8.1",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "lint-staged": "^10.3.0",
    "nodemon": "^2.0.4",
    "prettier": "^2.1.1",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.2"
  },
  "scripts": {
    "start": "npm run build && nodemon dist/server.js",
    "build": "rm -rf dist && tsc",
    "dev": "nodemon src/server.ts",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint --fix src/*",
    "prisma:update": "npm run prisma:migrate && npm run prisma:check",
    "prisma:migrate": "npx prisma migrate save --experimental && npx prisma migrate up --experimental",
    "prisma:check": "npx prisma introspect && npx prisma generate",
    "prisma:delete-migration": "rm -rf prisma/migrations",
    "@comment prisma:delete-migration": "have to run 'TRUNCATE \"_Migration\"' in DB after run that script"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/*": "eslint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/skqksh/graphql-server.git"
  },
